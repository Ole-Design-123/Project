@model IEnumerable<AppITInfo.Models.tbl_Teacher>
@{
    ViewBag.Title = "teacherData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Teacher List</h2>
<br />
<hr />
<div class="col-lg-offset-2 col-lg-8">
    <table id="DivReport" class="table table-striped table-bordered table-sm">
        <thead style="background-color:silver">
            <tr>
                <th scope="col">Sr No</th>
                <th scope="col">Index No</th>
                <th scope="col">Name</th>
                <th scope="col">Stream</th>
                <th scope="col">Contact No</th>
            </tr>
        </thead>
        @{int i = 1;}
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        <span>@i</span>
                        @{i++;}
                    </td>
                    <td> @item.IndexNo</td>
                    <td> @item.Name</td>
                    <td> @item.Subject</td>
                    <td>@item.MobileNo</td>
                </tr>
            </tbody>
        }
    </table>
    <a href="~/Coordinator/Coordinator_Info">Clike Here to go back to the report</a>
</div>