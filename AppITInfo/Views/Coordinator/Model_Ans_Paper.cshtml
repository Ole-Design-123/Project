                <tr>
                    <th align="center"><font size="5"> Question Paper</font></th>
                </tr>
                <tr>
                    <td>

                        <table class="DataGrid" cellspacing="0" cellpadding="5" rules="all" style="border-width:1px;border-style:solid;width:100%;background-color: #e7fafe;" border-collapse:collapse;">
                            <thead>
                                <tr>
                                    <th class="Header" align="center" valign="middle" scope="col" style="font-weight:bold;width:7%;background-color:#6db2ed">Sr.No.</th>
                                    <th class="Header" align="center" valign="middle" scope="col" style="font-weight:bold;width:7%;background-color:#6db2ed">Paper ID</th>
                                    <th class="Header" align="center" valign="middle" scope="col" style="font-weight:bold;width:7%;background-color:#6db2ed">Q.No</th>
                                    <th class="Header" align="center" valign="middle" scope="col" style="font-weight:bold;width:7%;background-color:#6db2ed">Sub Que</th>
                                    <th class="Header" align="center" valign="middle" scope="col" style="font-weight:bold;width:50%;background-color:#6db2ed">Question</th>
                                    <th class="Header" align="center" valign="middle" scope="col" style="font-weight:bold;width:50%;background-color:#6db2ed">Model Answer</th>
                                    @*<th class="Header" align="center" valign="middle" scope="col" style="font-weight:bold;width:20%;">Paper path</th>*@

                                </tr>
