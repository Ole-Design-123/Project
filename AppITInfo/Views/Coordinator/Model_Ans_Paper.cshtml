    <script>
        $(document).ready(function () {
            debugger

            $("#btn_submit").click(function (e) {
                $("#datatable_").show()
                Bind_Part();
            });
        });

        function Bind_Part() {

            $.ajax({
                url: "../Coordinator/Get_Data",
                type: "POST",
                dataType: 'json',
                data: {
                    paper_id: $('#Paper_ID').val()
                },
                success: function (Data) {
                    console.log(Data)
                    var temp = "";

                    if (Data.Result) {
                        $("#datatable").empty();
                        $.each(Data.Response, function (i, data) {
                            debugger;
                            temp += `<tr> <td>` + data.ID + `</td><td>` + data.Paper_ID + `</td><td>` + data.Question_No + `</td><td>` + data.Sub_Question + `</td><td>` + data.Question + `</td> <td style="padding-left:15px">` + `<input type="text"  style="border-width:2px;border-style:solid;width:80%;background-color:white;font-weight: bold;"id=` + data.ID + ` name="Model_Ans" value=` + (data.Model_Ans == null ? "" : data.Model_Ans) + `>` + `</td>></tr>`;

                        });
                        $("#datatable").append(temp);


                    }

                },
                error: function (e1, e2, e3) {
                    Error_Alert(Data.Message);
                }

            });
        }


        $("body").on("click", "#btn_Update", function () {
            debugger
            //Loop through the Table rows and build a JSON array.

            var paper = new Array();
            $(" #datatable tr").each(function () {
                var row = $(this);
                var trans = {};
                debugger
                trans.ID = row.find("td").eq(0).html();
                trans.Paper_ID = row.find("td").eq(1).html();
                trans.Question_No = row.find("td").eq(2).html();
                trans.Sub_Question = row.find("td").eq(3).html();
                trans.Question = row.find("td").eq(4).html();
                trans.Model_Ans = row.find("td:eq(5) input[type='text']").val();
                paper.push(trans);
                console.log(paper)
            });

            $.ajax({
                type: "POST",
                url: "/Coordinator/Tbl_Update",
                data: JSON.stringify(paper),

                contentType: "application/json;",
                dataType: "json",
                success: function (r) {
                    if (r.Result == true) {

                        if (r != 0) {
                            Bind_Part();

                            $(form1)[0].reset();
                            alert(r.Response);

                        }
                    }
                    else {
                        alert(r.Response);
                    }
                },
                error: function (ex) {
                    alert('Failed.' + ex);
                }
            });
        });

    </script>


