@model AppITInfo.Models.CoordCollegeViewModel
@{
    ViewBag.Title = "College_Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Profile</h2>
<br />
<div>
    <table id="TeacherInfo" class="table table-striped table-bordered table-sm">
        <thead style="background-color:silver">
            <tr>
                <th scope="col">Division Code</th>
                <th scope="col">Name</th>
                <th scope="col">Stream</th>
                <th scope="col">Mobile No</th>
                <th scope="col">Edit Profile</th>
            </tr>
        </thead>
        <tbody>
        </tbody>

    </table>
</div>
<hr />
<h2 style="text-align:center">Report</h2>
<br />
<div>
    <table class="table table-striped table-bordered table-sm">
        <thead style="background-color:silver">
            <tr>
                <th scope="col">TID</th>
                <th scope="col">Total Papers</th>
                <th scope="col">Complete</th>
                <th scope="col">Incomplete</th>
                <th scope="col">Skipped</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td> @Html.DisplayFor(model => model.TID)</td>
                <td> @Html.DisplayFor(model => model.TotalPapers)</td>
                <td> @Html.DisplayFor(model => model.CompletePapers)</td>
                <td> @Html.DisplayFor(model => model.IncompletePapers)</td>
                <td>@Html.DisplayFor(model => model.SkipPapers)</td>
            </tr>
        </tbody>

    </table>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: 'getTeacherInfo',
            datatype: 'json',
            success: function (data) {
                var rows = "<tr>" +
                    "<td >" + data.DivisionCode + "</td>" +
                    "<td >" + data.Name + "</td>" +
                    "<td >" + data.Subject + "</td>" +
                    "<td >" + data.MobileNo + "</td>" +
                    '<td><a href="/College/EditDetails/"' + data.IndexNo + '">Edit Details</a> | <a href="/College/ChangePassword"' + data.IndexNo + '">Change Password</a></td>' +
                    +"</tr>";
                $('#TeacherInfo tbody').append(rows);
                $("#loading-image").hide();
            },
        });
    });

</script>












