@model AppITInfo.Models.tbl_Teacher
@{
    ViewBag.Title = "EditDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("College_update", "College", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPostImage(this)", data_restUrl = Url.Action("College_update", "College", new { id = 0 }) }))
{
    @Html.AntiForgeryToken()
    <h2 style="text-align:center">Edit Profile</h2>
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <lable class="control-label col-md-offset-3 col-md-2">
                <b>Index No</b>
            </lable>

            <div class="col-md-4">
                @Html.EditorFor(model => model.IndexNo, new { htmlAttributes = new { @class = "form-control" } })
                <span style="color:red;font:200">@TempData["msg"] </span>
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-offset-3 col-md-2">
                <b>Name</b>
            </lable>

            <div class="col-md-4">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                <span style="color:red;font:200">@TempData["msg1"] </span>
                <span style="color:red;font:200">@TempData["msg2"] </span>

            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-offset-3 col-md-2">
                <b>Stream</b>
            </lable>
            <div class="col-md-4">
                <input type="checkbox" id="SUB" name="SUB" value="Arts">
                <label for="Arts"> Arts</label>&nbsp;&nbsp;&nbsp;
                <input type="checkbox" id="SUB" name="SUB" value="Commerce">
                <label for="Commerce">Commerce</label>&nbsp;&nbsp;&nbsp;
                <input type="checkbox" id="SUB" name="SUB" value="Science">
                <label for="Science"> Science </label>
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-offset-3 col-md-2">
                <b>Mobile No</b>
            </lable>

            <div class="col-md-4">
                @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" id="btnUpdate" value="Update" class="btn btn-default" />
                <a href="~/College/College_Info">Clike Here to go back to the report</a>
            </div>            
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
