@model AppITInfo.Models.TeacherModel

@{
    ViewBag.Title = "College_Reg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("College_Reg", "Home", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPostImage(this)", data_restUrl = Url.Action("College_Reg", "Home", new { id = 0 }) }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="align-content:center">
        <h2 style="text-align:center">College Registration</h2>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <lable class="control-label col-md-offset-3 col-md-2">
                <b>Index No</b>
            </lable>
            <div class="col-md-4">
                @Html.EditorFor(model => model.IndexNo, new { htmlAttributes = new { @class = "form-control " } })
                <span style="color:red;font:200">@TempData["Index"]</span>
                @*@Html.ValidationMessageFor(model => model.IndexNo, "", new { @class = "text-danger" })
        </div>*@
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-offset-3 col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    <span style="color:red;font:200">@TempData["name"]</span>
                    <span style="color:red;font:200">@TempData["alphabets"]</span>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-offset-3 col-md-2" })
                    <div class="col-md-4">
                        <input type="checkbox" id="SUB" name="SUB" value="Arts">
                        <label for="Arts"> Arts</label>&nbsp;&nbsp;&nbsp;
                        <input type="checkbox" id="SUB" name="SUB" value="Commerce">
                        <label for="Commerce">Commerce</label>&nbsp;&nbsp;&nbsp;
                        <input type="checkbox" id="SUB" name="SUB" value="Science">
                        <label for="Science"> Science </label>
                        <span style="color:red;font:200">@TempData["subject"]</span>

                    </div>
                </div>

                <div class="form-group">
                    <lable class="control-label col-md-offset-3 col-md-2">
                        <b>Mobile No</b>
                    </lable>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
                        <span style="color:red;font:200">@TempData["MobileNo"]</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-offset-3 col-md-2" })
                    <div class="col-md-4">
                        <input id="Password" type="password" class="form-control" name="Password" required>
                        <span style="color:red;font:200">@TempData["password"]</span>
                    </div>
                </div>

                <div class="form-group">
                    <lable class="control-label col-md-offset-3  col-md-2">
                        <b>Confirm Password</b>
                    </lable>
                    <div class="col-md-4">
                        <input id="ConfirmPassword" type="password" class="form-control" name="ConfirmPassword" required>
                        <span style="color:red;font:200">@TempData["ConfirmPassword"]</span>
                    </div>

                    <span id='message'></span>
                </div>
                <span style="color:red;font:200">@TempData["message"]</span>
                <span style="color:red;font:200">@TempData["successful"]</span>
                <span style="color:red;font:200">@TempData["successful"]</span>



                <div class="form-group">
                    <div class="col-md-offset-5 col-md-10">
                        <input type="submit" id="btnSubmit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>

        </div>
    </div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script type="text/javascript">
    $('#Password, #ConfirmPassword').on('keyup', function () {
        if ($('#Password').val() == $('#ConfirmPassword').val()) {
            $('#message').html('Password & Confirm Password matched').css('color', 'green');
        } else
            $('#message').html('Password & Confirm Password do no matched').css('color', 'red');
    });
</script>

